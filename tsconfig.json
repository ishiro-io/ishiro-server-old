{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@ishiro/api/*": [
        "apps/api/src/*"
      ],
      "@ishiro/scheduler/*": [
        "apps/scheduler/src/*"
      ],
      "@ishiro/libs/database/*": [
        "libs/database/src/*"
      ],
      "@ishiro/libs/shared/*": [
        "libs/shared/src/*"
      ],
      "@ishiro/libs/utils": [
        "libs/utils/src/index.ts"
      ],
    }
  }
}